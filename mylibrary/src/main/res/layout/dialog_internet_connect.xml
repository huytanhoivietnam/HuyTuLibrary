<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp"
    android:background="@drawable/bg_radius_20"
    android:backgroundTint="@color/white"
    android:gravity="center">
    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="16dp"
        android:text="@string/no_wifi_connection"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="@string/connect_to_wi_fi_to_proceed"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="13sp" />
    <ImageView
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:contentDescription="TODO"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/wifi"/>

    <TextView
        android:id="@+id/btnSet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/connect"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_radius_10"
        android:backgroundTint="@color/button_connect_wifi"
        android:textSize="16sp" />
    <FrameLayout
        android:id="@+id/frNative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>