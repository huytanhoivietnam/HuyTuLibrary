<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/language_background_color"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:src="@drawable/ic_back"
            android:visibility="visible"
            android:layout_marginStart="10dp"
            app:tint="@color/language_text_color" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="15dp"
            android:layout_toEndOf="@+id/back_arrow"
            android:layout_toStartOf="@+id/done"
            android:fontFamily="@font/inter_semibold"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="@string/select_language"
            android:textColor="@color/language_text_color"
            android:textSize="22sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingVertical="@dimen/_7sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:textSize="14sp"
            android:text="@string/apply"
            app:fontFamily="@font/inter_semibold"
            android:background="@drawable/bg_radius_30"
            android:textColor="#A7A9A8"
            android:backgroundTint="#EDE9E8" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_language"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/frNative"
        app:layout_constraintTop_toBottomOf="@+id/layoutToolbar"
        tools:itemCount="12" />

    <FrameLayout
        android:id="@+id/frNative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>